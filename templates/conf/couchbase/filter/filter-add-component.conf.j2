# Add logging component name from goxdcr.log
[FILTER]
    Name parser
    Match couchbase.log.xdcr
    Key_Name message
    Parser couchbase_xdcr_component
    # Do not overwrite original field
    Preserve_Key On
    # Keep everything else
    Reserve_Data On

