# Send to splunk: refer to configuration guide
[OUTPUT]
    Name        splunk
    Alias       splunk_output
    # Disable matching by default, to enable it pass the value as a variable.
    # With CAO, this can be done via a user-defined annotation, e.g.: fluentbit.couchbase.com/splunk.match="*"
    Match       ${SPLUNK_MATCH}
    # These should be set in the environment, defaulted in the container
    Host        ${SPLUNK_HOST}
    Port        ${SPLUNK_PORT}
    Splunk_Token ${SPLUNK_TOKEN}

    {% if fluent_bit_splunk_http_user | string | length == 0 %}# {% endif %}http_user ${SPLUNK_HTTP_USER}
    {% if fluent_bit_splunk_http_passwd | string | length == 0 %}# {% endif %}http_passwd ${SPLUNK_HTTP_PASSWD}
    {% if fluent_bit_splunk_channel | string | length == 0 %}# {% endif %}channel ${SPLUNK_CHANNEL}
    {% if fluent_bit_splunk_compress | string | length == 0 %}# {% endif %}compress ${SPLUNK_COMPRESS}
    tls         ${SPLUNK_TLS}
    tls.verify  ${SPLUNK_TLS_VERIFY}
    workers ${SPLUNK_WORKERS}
